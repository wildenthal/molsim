#! /bin/csh -f
# rm      out
cp 	lj.model        	fort.25
rm mu.dat
foreach rho (0.30 0.40 0.50 0.60 0.70 0.80 0.90 1.00)
  echo " --- rho ${rho} "  		>> out
  echo " --- rho ${rho} "  
  cat > fort.15  <<endofdata
  ibeg  , nequil  , prod   nsamp  iseed   nghost
   0      9998     9999  1        368675   100
  dr
  0.09 
  ndispl
  50  
  npart temp rho
  100   2.0  ${rho} 
endofdata
 cp 	lj.res          	fort.11
 cp 	lj.model          	fort.25
 time  ../Source/mc_nvt  		>>& out 
 cp 	fort.21         	lj.res
 cp 	fort.66         	lj.prt
 cat  fort.666              >>& mu.dat
 #perform block analysis
 cp 	lj.prth 		fort.31
 cp  	lj.prt 			fort.32
#  ../Block/block  	 		>>& out 
 rm fort.*
end
python3 analyze.py
exit



